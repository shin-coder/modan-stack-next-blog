generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // VSCode拡張機能がPrisma 7のエラーを表示しますが無視してください
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  name String
  email String @unique
  password String
  posts Post[]
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Post {
  id String @id @default(cuid())
  title String
  content String
  topImage String? 
  published Boolean @default(false)
  authorId String
  author User @relation(fields: [authorId], references: [id])
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
